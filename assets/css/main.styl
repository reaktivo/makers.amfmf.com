@require 'reset'
@require 'helpers'

header-font = 'Roboto Condensed'
text-font = 'Lekton'

html, body
  width 100%
  height 100%
  font-weight 400

strong
  font-weight 700
em
  font-style italic

body
  color #eee
  font-family text-font, sans-serif
  background #111
  line-height 1.6em

h1, h2, h3, h4, h5
  font-family header-font

a
  color #fff
  font-weight 700
  border-bottom 2px solid #fff
  text-decoration none

p
  margin 1em 0

ul
  list-style initial

hr
  border 0
  color #fff
  background #fff
  height 2px

.content
  width 768px
  max-width 100%
  margin 40px auto


.images
  img
    width 50%
    display inline-block
    box-sizing border-box
    border 0 solid #fff
    -webkit-transition all ease-in-out 0.3s
    transition all ease-in-out 0.3s
  img:hover
    -webkit-transform scale(1.2) rotate(-3deg)
    transform scale(1.2) rotate(-3deg)
    border 2px solid #fff
